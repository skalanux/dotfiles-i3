# xfce4-notify
for_window [class="Xfce4-notes"] floating enable;border none; focus mode_toggle
for_window [class="Xfce4-notifyd"] floating enable;border none; focus mode_toggle
bindsym $mod+l exec ~/.i3/lockpanta
#bindsym $mod+less exec ~/.i3/reset_readmessages.py
#bindsym Control+Tab exec i3-input -F 'exec ~/.i3/i3-wrapper.sh "%s"' -P Atajo:\  -f xft:Noto Sans 24

# Key Volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master 4%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 50%- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle

# Scratchpad
bindsym F12 [instance="master_volume"] scratchpad show
bindsym F8 [instance="cheater"] scratchpad show
bindsym F9  workspace 0 ;exec ~/.i3/webapps.sh trello
bindsym F10  workspace 1 ;exec ~/.i3/webapps.sh slack

mode "Launch: (p)Python (v)Volume (n)Notes (c)Calc (s)Slack (t)Trello (d)Drive" {
        # c, chrome
        bindsym p [instance="urxvt_python"] scratchpad show ; mode "default"
        bindsym v [instance="master_volume"] scratchpad show ; mode "default"
        #bindsym n [class="Xfce4-notes"] scratchpad show; mode "default"
        bindsym c [class="XCalc"] scratchpad show; mode "default"
        bindsym n  exec ~/.i3/webapps.sh keep; mode "default"
        bindsym t  workspace 0 ;exec ~/.i3/webapps.sh trello; mode "default"
        bindsym s  workspace 1 ;exec ~/.i3/webapps.sh slack; mode "default"
        bindsym d  exec ~/.i3/webapps.sh drive; mode "default"

        # go back to normal (if we don't launch something)
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym Control+Tab mode "Launch: (p)Python (v)Volume (n)Notes (c)Calc (s)Slack (t)Trello (d)Drive"
